<div class="container">
  <div class="row">
    <%= devise_error_messages! %>
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                   html: {class: "reg-page", autofill: 'off'},
                   options: {autocomplete: 'off'}) do |f| %>

                   <%= f.label t('devise.sign_up'), class: 'reg-header' %><br>

                   <div class="input-group margin-bottom-20">
                     <span class="input-group-addon"><%= fa_icon('user') %></span>
                     <%= f.text_field :username, class: 'form-control',
                       placeholder: :username, autofocus: true %>
                 </div>
                 <div class="input-group margin-bottom-20">
                   <span class="input-group-addon"><%= fa_icon('envelope') %></span>
                   <%= f.email_field :email, class: 'form-control', placeholder: :email %>
                 </div>
                 <div class="input-group margin-bottom-20">
                   <span class="input-group-addon"><%= fa_icon('lock') %></span>
                   <%= f.password_field :password, class: 'form-control', placeholder: :password %>
                 </div>
                 <div class="input-group margin-bottom-20">
                   <span class="input-group-addon"><%= fa_icon('lock') %></span>
                   <%= f.password_field :password_confirmation, class: 'form-control',
                     placeholder: :password_confirmation %>
               </div>
               <% if 1 == 0 %>
                 <%= t('registation.civic_check') %>
                 <div class="input-group margin-bottom-20">
                   <span class="input-group-addon"><%= fa_icon('bolt') %></span>
                   <%= text_field_tag :civic, nil, class: 'form-control',
                     placeholder: t('attributes.civic') %>
               </div>
             <%end%>
             <div class="row">
               <%= f.submit nil, class: 'btn-u pull-right' %>
             </div>
             <%= render "devise/shared/links" %>
           <% end %>
    </div>
  </div>
</div>
</div>
