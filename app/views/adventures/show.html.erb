<div class="col-md-12 introduction">
  <div class="headline">
    <h1><%= title(@adventure.title) %></h1>
  </div>

  <small><%= adventure_info(@adventure) %></small>

<% if @adventure.published? %>
    <%= render 'adventure_view' %>
<% end %>
</div>

<div class="col-md-12">
  <hr>
  <%= link_to(t('.index'), adventures_path, class: 'btn primary') %>
  <%= link_to(t('.archive'), archive_adventures_path,
                             class: 'btn secondary') %>
</div>
