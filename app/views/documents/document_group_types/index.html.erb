  <section>
    <p>
      <%= link_to 'Skapa ny typ av dokumentsamling', new_document_group_type_path, class: 'btn btn-u' %>
    </p>
  </section>
</div>

<div class="col-md-3">
  <%= render partial: 'documents/shared/common_admin_menu' %>
