<div class="headline">
  <h1><%= title(@post.title) %></h1>
</div>
<div class="col-md-12">
  <%= simple_form_for(@post, url: update_admin_permissions_path(@post)) do |f| %>
    <%= f.button :submit %>
    <%= link_to(t('.edit_post'), edit_admin_council_post_path(@post.council, @post),
                                 class: 'btn secondary') %>
    <%= link_to(t('.all_permission'), admin_permissions_path,
                                      class: 'btn secondary') %>

    <div class="panel-body">
      <table class="table table-bordered">
        <tbody>
          <% @permissions.group_by(&:action).each do |action, permissions| %>
            <tr>
              <td><%= action %></td>
              <td>
                <%= f.input(:permission_ids, collection: permissions,
                                             label_method: :subject_class,
                                             value_method: :id,
                                             as: :check_boxes,
                                             item_wrapper_class: 'inline') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
