<div class="col-md-12">
  <div class="panel panel-orange margin-bottom-40">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= fa_icon('tasks') %> <%= title(Permission.model_name.human(count: 2)) %>
      </h3>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th><%= model_name(Position) %></th>
          <th><%= models_name(Permission) %></th>
        </tr>
      </thead>
      <tbody>
        <% @positions.each do |position| %>
          <tr>
            <td>
              <%= link_to(position, position_admin_permissions_path(position)) %>
            <td>
              <% position.permissions.each do |p| %>
                <%= %(#{p.action} #{p.subject_class}) %><br>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

