<%= simple_form_for([:admin, faq]) do |f| %>
  <%= f.input :question %>
  <%= f.input :answer, as: :pagedown, input_html: { preview: true, rows: 10 } %>
  <%= f.input :category, collection: Faq.categories, input_html: { class: 'select2_tags' },
                         include_blank: false %>
  <%= f.button :submit %>

  <% if faq.persisted? %>
    <%= link_to(t('.destroy'), faq_path(faq), method: :delete,
                               data: {confirm: t('.confirm_destroy')},
                               class: 'btn danger pull-right') %>
  <% end %>
<% end %>
