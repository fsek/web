<div class="col-md-12 col-sm-12 coffee-card-padding">
  <div class= "headline">
    <h2><%= title(('Kaffekort')) %></h2>
  </div>
  <%= link_to(('Nytt kaffekort'), new_admin_coffee_card_path, class: 'btn primary')%>
</div>

<div class="col-md-12 col-sm-12 reg-page">
  <div class= "headline">
    <h1><%= title(('Existerande kaffekort')) %></h1>
  </div>
  <div class="col-md-12">
    <%= grid(@coffee_cards, hide_submit_button: true, hide_reset_button: true) do |g|
      g.column(name: ('Användare'), attribute: 'user_id') do |coffee_card|
        coffee_card.user
      end

      g.column(name: ('Antal kaffe kvar')) do |coffee_card|
        coffee_card.available_coffees
      end

      g.column(name: ('Redigera')) do |coffee_card|
        link_to(('Rediga kaffekort'), edit_admin_coffee_card_path(coffee_card),
                                     class: 'btn secondary')
      end

      g.column(name: ('Ta bort')) do |coffee_card|
        link_to(('Ta bort kaffekort'), admin_coffee_card_path(coffee_card),
                                     method: :delete,
                                     data: {confirm: ('Vill du verkligen ta bort?')},
                                     class: 'btn danger')
      end
    end %>

    <button class="wg-external-submit-button btn primary" data-grid-name="grid">
      <%= ('Spara ändringar') %>
    </button>

    <button class="wg-external-reset-button btn secondary" data-grid-name="grid">
      <%= ('Återställ ändringar') %>
    </button>
  </div>
</div>