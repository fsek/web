<div class="headline">
  <h1><%= title(t('.title')) %></h1>
</div>

<div class="col-md-2 col-sm-12 margin-bottom-20">
  <button class="wg-external-submit-button btn primary" data-grid-name="grid">
    <%= t('wice_grid.filter') %>
  </button>

  <button class="wg-external-reset-button btn secondary" data-grid-name="grid">
    <%= t('wice_grid.reset_filter') %>
  </button>

  <hr>

  <%= link_to(t('.new_news'), new_admin_news_path, class: 'btn primary') %>
  <%= link_to(t('.all_news'), news_index_path, class: 'btn secondary') %>
</div>

<div class="col-md-10 col-sm-12">
  <%= grid(@news_grid, hide_submit_button: true, hide_reset_button: true) do |g|
    g.column name: News.human_attribute_name(:title), attribute: 'title' do |news|
      link_to(news, news_path(news))
    end
    g.column name: News.human_attribute_name(:url), attribute: 'url'
    g.column name: News.human_attribute_name(:image), attribute: 'image' do |news|
      yes_no(news.image.present?)
    end
    g.column name: News.human_attribute_name(:user), assoc: :user, attribute: 'id' do |news|
      user_link(news.user)
    end
    g.column name: News.human_attribute_name(:created_at), attribute: 'created_at' do |news|
      l(news.created_at)
    end
    g.column name: News.human_attribute_name(:updated_at), attribute: 'updated_at' do |news|
      l(news.updated_at)
    end
    g.column name: t('global.edit') do |link|
      link_to(t('global.edit'), edit_admin_news_path(link))
    end
  end -%>
</div>
