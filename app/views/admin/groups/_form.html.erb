<%= simple_form_for([:admin, group]) do |f| %>
  <%= f.input :group_type, collection: group_type_collection,
                           input_html: { class: 'select2' },
                           include_blank: false %>
  <%= f.association :introduction, collection: Introduction.by_start,
                                   input_html: { class: 'select2' },
                                   include_blank: true,
                                   label_method: :to_s %>
  <%= f.input :name %>
  <%= f.input :number, hint: t('.number_hint') %>
  <%= f.association :users, collection: User.by_firstname.confirmed,
                            input_html: { class: 'select2' },
                            include_blank: false,
                            label_method: :print_email %>
  <%= f.button :submit %>
<% end %>
