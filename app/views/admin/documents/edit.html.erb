<div class="col-md-6 col-md-offset-3 col-sm-12 reg-page">
  <div class="headline">
    <h1><%= title(t('.title')) %></h1>
  </div>

  <%= render 'form', document: @document, categories: @categories %>

  <hr>
  <%= link_to(t('.destroy'), admin_document_path(@document),
                             method: :delete,
                             data: { confirm: t('.confirm_destroy')},
                             class: 'btn danger pull-right') %>
  <%= link_to(t('.show'), document_path(@document),
                          target: :blank,
                          class: 'btn secondary') %>
  <%= link_to(t('.index'), admin_documents_path,
                           class: 'btn secondary') %>
</div>
