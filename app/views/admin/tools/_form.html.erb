<% if tool.present? %>
  <%= simple_form_for([:admin, tool]) do |f|%>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :total, as: :integer %>
    <%= f.button :submit %>
    <% if tool.persisted? %>
      <%= link_to(t('.destroy'), admin_tool_path(tool),
                                 method: :delete,
                                 data: {confirm: t('.confirm_destroy')},
                                 class: 'btn danger pull-right') %>
    <% end %>
  <% end %>
<% end %>
