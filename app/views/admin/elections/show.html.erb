<% provide(:title, model_name(Election)) %>
<div class="col-md-10 col-md-offset-1 col-xs-12 reg-page">
  <div class="headline">
    <h3><%= t('election.edit') %></h3>
  </div>

  <%= render 'form', election: @election %>

  <hr>

  <%= link_to(t('election.show'), elections_path,
              class: 'btn primary') %>

  <%= link_to(t('election.show_nominations'),
              nominations_admin_election_path,
              class: 'btn secondary') %>

  <%= link_to(t('election.show_candidates'),
              candidates_admin_election_path,
              class: 'btn secondary') %>
</div>
