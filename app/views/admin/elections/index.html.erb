<%= provide(:title, t('election.administrate')) %>
<div class="headline">
  <h2><%= t('election.index') %></h2>
</div>

<div class="col-md-2 col-sm-12 margin-bottom-20">
  <%= link_to(t('election.new'), new_admin_election_path, class: 'btn primary') %>
  <%= link_to(t('election.show'), elections_path, class: 'btn secondary') %>
</div>

<div class="col-md-10 col-sm-12">
  <%= grid(@grid, hide_submit_button: true, hide_reset_button: true) do |g|
    g.column(name: Election.human_attribute_name(:title), attribute: 'title', filter: false)
    g.column(name: Election.human_attribute_name(:url), attribute: 'url', filter: false)
    g.column(name: Election.human_attribute_name(:start), attribute: 'start',
             filter: false) do |election|
      l(election.start)
    end
    g.column(name: Election.human_attribute_name(:updated_at), attribute: 'updated_at',
             filter: false) do |election|
      l(election.updated_at)
    end
    g.column(name: Election.human_attribute_name(:current_election)) do |election|
      yes_no(election == Election.current)
    end
    g.column(name: t(:edit), filter: false) do |election|
      link_to(t('election.edit'), admin_election_path(election))
    end
  end -%>
</div>
