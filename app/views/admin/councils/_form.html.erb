<%= simple_form_for([:admin, council]) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, hint: t('.description_hint') %>
  <%= f.input :url %>

  <% if council.positions.any? %>
    <%= f.association :president, collection: council.positions,
                                  input_html: {class: 'select2'} %>
  <% elsif council.persisted? %>
    <%= simple_format(t('.no_positions'))%>
  <% end %>

  <%= f.button :submit %>
<% end %>
