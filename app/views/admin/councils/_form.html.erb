<%= simple_form_for([:admin, council]) do |f| %>
  <%= f.input :title_sv, wrapper_html: {class: 'inline half'} %>
  <%= f.input :title_en, wrapper_html: {class: 'inline half'} %>
  <%= f.input :description, hint: t('.description_hint') %>
  <%= f.input :url %>

  <% if council.posts.count > 0 %>
    <%= f.association :president, collection: council.posts,
                                  input_html: { class: 'select2' } %>
  <% elsif council.persisted? %>
    <%= simple_format(t('.no_posts'))%>
  <% end %>

  <%= f.button :submit %>
<% end %>
