<div class="headline">
  <h1><%= title(t('.title')) %></h1>
</div>

<div class="col-md-2 col-sm-12 cafe competition margin-bottom-20">
  <button class="wg-external-submit-button btn primary" data-grid-name="grid">
    <%= t('wice_grid.filter') %>
  </button>

  <button class="wg-external-reset-button btn secondary" data-grid-name="grid">
    <%= t('wice_grid.reset_filter') %>
  </button>

  <hr>

  <%= link_to(t('.new_council'), new_admin_council_path,
                                 class: 'btn primary') %>
  <%= link_to(t('.council_start_page'), councils_path,
                                        class: 'btn secondary') %>
</div>

<div class="col-md-10 col-sm-12">
  <%= grid(@council_grid, hide_submit_button: true, hide_reset_button: true) do |g|
    g.column(name: Council.human_attribute_name(:title)) do |council|
      link_to(council, council_path(council), target: :blank)
    end
    g.column(name: Council.human_attribute_name(:updated_at), attribute: 'updated_at',
             filter: false)

    g.column(name: t('.posts'), filter: false) do |council|
      link_to(t('.posts'), admin_council_posts_path(council))
    end

    g.column(name: t('global.edit'), filter: false) do |council|
      link_to(t('global.edit'), edit_admin_council_path(council))
    end
  end -%>
</div>
