<%= simple_form_for([:admin, introduction]) do |f| %>
  <%= f.input :title_sv, wrapper_html: {class: 'inline half'} %>
  <%= f.input :title_en, wrapper_html: {class: 'inline half'} %>
  <%= f.input :start, as: :datetime_picker, wrapper_html: {class: 'inline half'} %>
  <%= f.input :stop, as: :datetime_picker, wrapper_html: {class: 'inline half'} %>
  <%= f.input :slug %>
  <%= f.input :current %>
  <%= f.input :description_sv, as: :text, input_html: {maxlength: 160} %>
  <%= f.input :description_en, as: :text, input_html: {maxlength: 160} %>
  <%= f.button :submit %>
  <% if introduction.persisted? %>
    <%= link_to(t('.destroy_introduction'), admin_introduction_path(introduction),
                                            method: :delete,
                                            data: {confirm: t('.confirm_destroy')},
                                            class: 'btn danger') %>
  <% end %>
<% end %>
