<%= form.input :content, as: :pagedown, input_html: {preview: true, rows: 10} %>
<%= form.input :image, as: :file %>
<%= form.association :groups, collection: groups,
                              input_html: { class: 'select2' },
                              include_blank: false,
                              label_method: :to_s %>
<%= form.input :scheduled, as: :boolean %>
<%= form.input :scheduled_time, as: :datetime_picker %>
<%= form.button :submit %>
