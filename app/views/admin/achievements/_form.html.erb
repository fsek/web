<%= simple_form_for([:admin, achievement]) do |f| %>
  <%= f.input :name %>
  <%= f.input :points %>

  <%= f.button :submit %>
  <%= link_to t('.index'), admin_achievements_path, class: 'btn secondary' %>

  <% if achievement.persisted? %>
    <%= link_to t('.destroy'), admin_achievement_path(achievement),
                               method: :delete,
                               class: 'btn danger pull-right' %>
  <% end %>
<% end %>
