<h1>Listing constants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constants.each do |constant| %>
      <tr>
        <td><%= constant.name %></td>
        <td><%= constant.value %></td>
        <td><%= link_to 'Show', admin_constant_path(constant) %></td>
        <td><%= link_to 'Edit', edit_admin_constant_path(constant) %></td>
        <td><%= link_to 'Destroy', admin_constant_path(constant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Constant', new_admin_constant_path %>
