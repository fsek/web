<div class="headline">
  <h1><%= title(t('.title')) %></h1>
</div>

<div class="col-md-2 col-sm-12">
  <%= link_to(t('.new'), new_admin_main_menu_path, class: 'btn primary') %>
  <%= link_to t('.menus'), admin_menus_path, class: 'btn primary' %>
</div>

<div class="col-md-10 col-sm-12">
  <%= grid @grid do |g|
    g.column(name: MainMenu.human_attribute_name(:name), attribute: 'name', assoc: :translations) do |m|
      link_to m, edit_admin_main_menu_path(m)
    end
    g.column(name: MainMenu.human_attribute_name(:index), attribute: 'index', filter: false)
    g.column(name: MainMenu.human_attribute_name(:mega), attribute: 'mega', filter: false) do |m|
      yes_no(m.mega)
    end
    g.column(name: MainMenu.human_attribute_name(:visible), attribute: 'visible', filter: false) do |m|
      yes_no(m.visible)
    end
  end -%>
</div>
