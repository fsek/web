<% provide(:title, @nomination.election.to_s) %>

<%= content_for(:greeting) do %>
  <h3><%= t('election_mailer.hello', name: @nomination.name) %></h3>
<% end %>

<%= content_for(:main_content) do %>
  <p><%= "#{t('.you_have_been_nominated')}: #{@nomination.position}." %></p>

  <% if @nomination.motivation.present? %>
    <p>
    <%= t('.with_motivation') %>:<br>
    <%= simple_format(@nomination.motivation) %>
    <p>
  <% end %>

  <%= markdown(@nomination.election.nominate_mail)%>

  <%= simple_format(t('.accept_before_closing',
                      date: l(@nomination.election.position_closing(@nomination.position)))) %>
  <p><%= t('.via_web') %>:<br>

  <%= link_to(@nomination.candidate_url, @nomination.candidate_url) %>
<% end %>

<%= content_for(:bottom_signature) do %>
  <%= simple_format(t('.sincerely')) %>
<% end %>
