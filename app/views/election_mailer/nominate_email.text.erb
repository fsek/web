<%= "#{t('nomination.mailer.you_have_been_nominated')} #{@nomination.post}." %>

<% if @nomination.motivation.present? %>
  <%= t('nomination.mailer.with_motivation') %>:
  <%= @nomination.motivation %>
<% end %>

