<%= (t('nomination.mailer.accept_before_closing',
       date: l(@nomination.election.post_closing(@nomination.post)))) %>

<%= t('nomination.mailer.via_web') %>:
<%= @nomination.candidate_url %>

<%= t('nomination.mailer.sincerely') %>
