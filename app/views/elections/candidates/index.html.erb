<%= provide(:title, @election_view.election) %>
<div class="headline">
  <h2><%= t('candidate.index') %></h2>
</div>

<div class="col-md-2 col-sm-12">
  <%= link_to(t('candidate.new'), new_candidate_path, class: 'btn primary') %>
  <%= link_to(t('election.show'), elections_path, class: 'btn primary') %>
</div>

<div class="col-md-10 col-sm-12 election">
  <% if @election_view.candidates.any? %>
    <div class="headline">
      <h3><%= t('candidate.your_candidates') %></h3>
    </div>
    <% @election_view.candidates.each do |candidate| %>
      <div class="col-md-4 col-sm-6 col-xs-12 candidate">
        <h4><%= candidate.post %></h4>
        <ul class="list">
          <li>
            <%= Candidate.human_attribute_name(:count) %>:
            <%= @election_view.election.candidate_count(candidate.post) %>
          </li>
          <li>
            <%= Candidate.human_attribute_name(:closing) %>:
            <%= l(@election_view.election.post_closing(candidate.post),
                  format: :short) %>
          </li>
        </ul>
        <%= link_to(t('candidate.edit'), candidate_path(candidate),
                                         class: 'btn secondary') %>
      </div>
    <% end %>
  <% else %>
    <h3><%= t('candidate.no_candidates') %></h3>
  <% end %>
</div>
