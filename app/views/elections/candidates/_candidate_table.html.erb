<%if (@candidates.count > 0)%>
  <%= grid(@candidates_grid) do |g|
    g.column name: 'Post', attribute: 'post_id', filter: false do |candidate|
      link_to(candidate.post.title, %(##{dom_id(candidate.post)}), data: { toggle: 'collapse' })
    end

    g.column name: 'Sökande', filter: false do |candidate|
      candidate.election.candidate_count(candidate.post) || '*'
    end

    g.column name: 'Skapad:',attribute: 'created_at',filter:false do |candidate|
      candidate.created_at
    end
  end -%>
<%for cand in @candidates%>
  <div id='<%=dom_id(cand.post)%>' class='collapse'>
    <div class='funny-boxes funny-boxes-left-orange left-text-align'>
      <%=link_to('Dölj',dom_id(cand.post), class: 'btn btn-u pull-right', data: { toggle: 'collapse' })%>
      <h2><%=cand.post%></h2>
      <div class='col-md-12'>
        <%=simple_format(cand.post.description)%>
        <ul class='list-unstyled'>
          <li>
            <%= fa_icon('briefcase') %>
            Gräns: <%=cand.post.limit%>
        </li>
        <li>
          <%=fa_icon('users')%> Utskott: <%=link_to(cand.post.council, cand.post.council)%>
        </li>
        </ul>
        <% if cand.editable? %>
          <%=link_to('Redigera',candidate_path(cand), class: 'btn-u btn-u-small')%>
          <%=link_to('Ta bort',candidate_path(cand), method: :delete, class: 'btn-u btn-u-small')%>
        <% else%>
          Kan inte redigeras längre.
        <%end%>
      </div>
    </div>
  </div>
<%end%>
<%end%>
