<% cafe_work = @cafe_work %>
<div class="col-md-6 col-md-offset-3">
  <div class="headline headline-md"><h2>Cafejobb</h2></div>
  <div class="row margin-bottom-25 center">
    <div class="col-md-4">
      <div class="cafe-date">
        <%= fa_icon('calendar') %>
        <span><%= cafe_work.work_day.day %></span>
        <small><%= cafe_work.work_day.strftime('%m, %Y') %></small>
      </div>
    </div>
    <div class="col-md-4">
      <div class="cafe-date">
        <%= fa_icon('clock-o') %>
        <span><%= cafe_work.t_start %></span>
        till
        <small><%= cafe_work.t_end %></small>
      </div>
    </div>
    <div class="col-md-4">
      <div class="cafe-date">
        <span style="margin-top:13%;">LV <%= cafe_work.lv %></span>
        <span>LP <%= cafe_work.lp %></span>
      </div>
    </div>
  </div>
  <div class="margin-bottom-20">
    <div class="headline headline-md"><h2>Jobbare</h2></div>
    <%= render 'worker_table', cafe_work: cafe_work %>
    <%= render 'form', action: :update_worker %>
  </div>
  <div class="margin-bottom-20">
    <%= link_to(t('cafe_work.back_to_index'), cafe_works_path, class: 'btn btn-u') %>
  </div>
</div>
