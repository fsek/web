<p>Detta är sanningsministeriets teleskärm</p>
<% @broadcasts.each do |b| %>
  <%user = @users.find(b.user_id)%>
  <div class="headline">
    <h3><%= user %></h3>
  </div>

  <div class="info">
    <%= user %>
    <span class="date">
      <%= l(b.created_at) %>
    </span>
  </div>

  <div class= "start box">
    <div class="margin-bottom-20">
      <%= markdown(b.content) %>
    </div>
  </div>

  
<% end %>