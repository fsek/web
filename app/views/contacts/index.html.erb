<div class="headline headline-md">
  <h3>
    <%= models_name(Contact) %>
  </h3>
</div>
<div class="panel-group acc-v1 margin-bottom-40" id="answered">
  <%@first=true%>
  <% @contacts.each do |p| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <div id="contact">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#answered" href="#<%=dom_id(p)%>">
              <%=p.name%>
            </a>
          </div>
        </h4>
      </div>
      <div id="<%=dom_id(p)%>" class="panel-collapse collapse <%if @first%><%@first=false%> in<%end%>">
        <div class="panel-body">
          <%= simple_format(p.text) %>
          <%= link_to(t('contact.contact'), contact_path(p), class: "btn-u btn-u-small pull-right") %>
        </div>
      </div>
    </div>
  <%end%>
</div>
