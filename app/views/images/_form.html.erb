	<% if @council.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@image.errors.count, "error") %> gÃ¶r att bilden inte kan sparas:</h2>	
	      <ul>
	      <% @image.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
  	<% end %>
