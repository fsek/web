<%= content_for :pre_content do %>
  <div class="carousel slide carousel-v1 margin-bottom-20 margin-top-20" id="myCarousel-1">
    <div class="carousel-inner">
      <div class="item active">
        <div class="start-background">
          <div class="container">
            <%= content_tag(:h1, t('front.welcome')) %>
            <%= content_tag(:p, t('front.below_welcome')) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="col-md-7 col-sm-12">
  <%= render @notices%>
</div>

<div class="col-md-5 col-sm-12">
  <%= render '/events/stream', events: @events %>
  <div class="headline headline-md">
    <%= content_tag(:h3, models_name(News)) %>
  </div>
  <%= render @news%>
  <%= link_to news_index_path do%>
    <%= fa_icon('plus') %> <%= t('news.more') %>
<%end%>
</div>
