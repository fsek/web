<% description(t('.description')) %>
<% keywords(t('.keywords')) %>
<div class="col-md-12">
  <div class="headline">
    <h1><%= title(t('.title')) %></h1>
  </div>

  <%= simple_format(t('.first')) %>
  <%= simple_format(t('.second')) %>
  <%= simple_format(t('.third')) %>
  <%= contact_from_slug(slug: 'naringsliv') %>
</div>
<div class="col-md-12">
  <div class="tab-v1">
    <div class="headline">
      <%= simple_format(t('.our_offers')) %>
    </div>

    <ul class="nav nav-tabs">
      <li class="active">
        <%= link_to(t('.farad'), '#farad', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.evening'), '#kvall', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.lunch'), '#lunch', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.marketing'), '#marknad', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.visits'), '#studie', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.nollning'), '#nollning', data: {toggle: 'tab'}) %>
      </li>
      <li>
        <%= link_to(t('.sponsoring'), '#spons', data: {toggle: 'tab'}) %>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade in active" id="farad">
        <div class="col-md-12">
          <%= simple_format(t('.farad_description')) %>
        </div>
      </div>
      <div class="tab-pane fade in" id="kvall">
        <div class="col-md-12">
          <%= simple_format(t('.evening_first')) %>

          <p><%= t('.evening_may_contain') %>:</p>
          <ul class="list">
            <li><%= t('.case_workshop') %></li>
            <li><%= t('.pub') %></li>
            <li><%= t('.sittning') %></li>
            <li><%= t('.sport_event') %></li>
            <li><%= t('.lecture') %></li>
          </ul>

          <%= simple_format(t('.evening_last')) %>
        </div>
      </div>
      <div class="tab-pane fade in" id="lunch">
        <div class="col-md-12">
          <%= simple_format(t('.lunch_description')) %>
        </div>
      </div>
      <div class='tab-pane fade in' id='marknad'>
        <div class="col-md-12">
          <%= simple_format(t('.marketing_description')) %>
        </div>
      </div>
      <div class='tab-pane fade in' id='studie'>
        <div class="col-md-12">
          <%= simple_format(t('.visits_description')) %>
        </div>
      </div>
      <div class='tab-pane fade in' id='nollning'>
        <div class="col-md-12">
          <%= simple_format(t('.nollning_description')) %>
        </div>
      </div>
      <div class='tab-pane fade in' id='spons'>
        <div class="col-md-12">
          <%= simple_format(t('.sponsoring_description')) %>
        </div>
      </div>
    </div>
  </div>
</div>
