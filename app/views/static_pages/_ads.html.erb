<div class="ads">
  <div id="adCarou" class="carousel slide carousel-fade" data-ride="carou" data-interval="8000">
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= link_to cafe_path do %>
          <%= image_tag('carousel/hilbert.jpg', class: 'ad-image') %>
        <% end %>
      </div>

      <div class="item">
        <%= link_to company_about_path do %>
          <%= image_tag('carousel/biz.jpg', class: 'ad-image') %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="weektorn box">
    <div class="headline">
      <h3><%= link_to(t('.weektorn'), weektorn_archive, target: '_blank') %></h3>
    </div>

    <%= simple_format(t('.weektorn_subscribe')) %>
    <%= link_to(t('.subscribe'), weektorn_signup, class: 'btn primary', target: '_blank')%>
    <p>
      <%= t('.weektorn_send_in') %>
      <%= contact_from_slug(slug: 'sanningsminister') %>
      <%= t('.weektorn_before_deadline') %>
      <%= link_to(t('.weektorn_read_online'), weektorn_archive) %>
    </p>
  </div>
</div>
