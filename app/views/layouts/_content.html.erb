<div class="container content">
  <% if notice %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger fade-in">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= t('alert.error') %> </strong> <%= alert %>
  </div>
<% end %>

<%= yield %>

</div>
