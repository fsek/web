<ul class="loginbar pull-right">
  <% if can?(:manage, :all) %>
      <li class="devider"></li>
  <% end %>
  <% if user_signed_in? %>
      <% if current_user.permissions.count > 0 %>
          <%= render 'layouts/admin_dropdown' %>
          <li class="devider"></li>
      <% end %>
      <li><%= link_to fa_icon("calendar"), :calendars %></li>
      <li class="devider"></li>

      <li class="dropdown">
        <%= link_to(fa_icon("user") + ' ' + current_user, current_user,
                    class: "dropdown-toggle", data: {toggle: "dropdown", delay: "0",
                                                     'close-others' => "false"}) %>
        <ul class="dropdown-menu pull-right">
          <li><%= link_to t('user.settings'), :edit_own_user %></li>
          <li><%= link_to t('devise.sign_out'), :destroy_user_session, method: :delete %></li>
        </ul>
      </li>
  <% else %>
      <li>
        <%= link_to(fa_icon("sign-in") + ' '+ t('devise.sign_in'), new_user_session_path) %>
      </li>
      <li class="devider">
      <li>
        <%= link_to(fa_icon("plus") + ' ' + t('devise.sign_up'), new_user_registration_path) %>
      </li>
  <% end %>
</ul>

