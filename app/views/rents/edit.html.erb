<% provide(:title, Rent.model_name.human) %>
<div class='col-md-8 col-md-offset-2 reg-page'>
  <div class='row margin-bottom-20'>
    <%= render 'form' %>
    <hr>
    <% if @rent.edit?(current_user) %> 
    <%= link_to(t('rent.remove'), rent_path(@rent), method: :delete, class: 'btn btn-u',
                data: {confirm: t('rent.confirm_remove')}) %>
    <% end %>
    <% if can? :manage, @rent %>
      <%= link_to(t('administrate'), admin_rent_path(@rent)) %>
    <% end %>
  </div>
  <div class='row'>
    <%= link_to(t('rent.back_to_index'), :rents, class: 'btn btn-u') %>
  </div>
</div>
